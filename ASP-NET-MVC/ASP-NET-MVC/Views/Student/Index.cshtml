@model IEnumerable<ASP_NET_MVC.Models.Student>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Student</h2>
@Html.ActionLink("Create New", "AddStudent", "Student")
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>
                    <b>@student.S_id</b>
                </td>
                <td>
                    @student.name
                </td>
                
                <td>
                    @Html.ActionLink("Update Student", "UpdateStudent", "Student")
                </td>
                <td>@Html.ActionLink("Remove Student", "RemoveStudent", "Student")</td>
            </tr>
        }
    </tbody>
</table>
