@model ASP_NET_MVC.Models.Student
@{
    ViewBag.Title = "UpdateStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update Student</h2>
@using (@Html.BeginForm("SaveUpdateStudent", "Student", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="form">
        @Html.LabelFor(m => m.S_id, "Student ID")
        @Html.TextBoxFor(m => m.S_id, new { @readonly = "readonly", @class = "form-control" })
        @Html.ValidationMessageFor(m => m.S_id)
    </div>
    <div class="form">
        @Html.LabelFor(m => m.@Class, "Class")
        @Html.TextBoxFor(m => m.@Class, new { @readonly = "readonly", @class = "form-control" })
        @Html.ValidationMessageFor(m => m.@Class)
    </div>
    <div class="form">
        @Html.LabelFor(m => m.name, "Full Name")
        @Html.TextBoxFor(m => m.name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.name)
    </div>
    <div class="form">
        <b>Gender</b>
        @Html.DropDownListFor(m => m.gender, new List<SelectListItem>
            { new SelectListItem{Text="Male", Value="M"},
            new SelectListItem{Text="Female", Value="F"}}, "Please Select", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.gender)
    </div>
    <div class="form">
        @Html.LabelFor(m => m.dob, "Birthday")
        @Html.TextBoxFor(m => m.dob, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.dob)
    </div>

    <div><input type="submit" value="Submit" class=" btn btn-success" /></div>
}
<style>
    .btn {
        margin: 10px;
    }
</style>
