@model IEnumerable<ASP_NET_MVC.Models.Class>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Class</h2>
@Html.ActionLink("Create New", "AddClass", "Class")
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Department</th>
            <th>Creating Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var class_model in Model)
        {
        <tr>
            <td><b>@class_model.C_id</b> </td>
            <td> @class_model.dep </td>
            <td> @class_model.create_date </td>
            <td>
                @Html.ActionLink("Edit", "UpdateClass", new RouteValueDictionary(new { id = class_model.C_id }))|
                @Html.ActionLink("Remove", "RemoveClass", new RouteValueDictionary(new { id = class_model.C_id }))
            </td>
        </tr>
        }
    </tbody>
</table>
